<div class ="col-md-8 col-md-offset-2 doc-header">
 <h3>Add new doc</h3>
<%= simple_form_for @doc do |f| %>
  <div class ="form-group" >
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class ="form-group" >
    <%= f.label :body %>
    <%= f.text_area :body, :class => "form-control" %>
  </div>
  <div class ="form-group" >
    <%= f.button :submit, :class => "btn btn-info" %>
  </div>
<% end %>
</div>